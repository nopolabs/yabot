{
    "name": "nopolabs/yabot",
    "description": "Yet Another Bot",
    "version": "0.0.1",
    "type": "package",
    "config" : {
        "platform": {
            "php": "7.0"
        }
    },
    "require": {
        "php": ">=7.0",
        "coderstephen/slack-client": "dev-master",
        "guzzlehttp/guzzle": "^6.2",
        "monolog/monolog": "~1.13",
        "symfony/dependency-injection": "^3.2",
        "symfony/config": "^3.2",
        "symfony/expression-language": "^3.2",
        "symfony/yaml": "^3.2",
        "react/http": "^0.6",
        "roave/security-advisories": "dev-master",
        "nopolabs/react-aware-guzzle-client": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "nopolabs/mock-with-expectations": "dev-master",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Dan Revel",
            "email": "dan@nopolabs.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Nopolabs\\Yabot\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nopolabs\\Yabot\\Tests\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/nopolabs/slack-client"
        },
        {
            "type": "vcs",
            "url":  "git@github.com:nopolabs/phpws.git"
        }
    ]
}
